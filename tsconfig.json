{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "src/",
    "outDir": "./dist",
    "types": ["node", "jest"],
    "strict": true,
    "lib": ["es2019", "ESNext"],
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}